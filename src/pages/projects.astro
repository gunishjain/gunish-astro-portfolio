---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import HorizontalCardNew from "../components/HorizontalCardNew.astro";
---

<BaseLayout title = "Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">React Projects</div>
  </div>

  <HorizontalCardNew
      title="Expense Tracker"
      img="/projects_img/expense.png"
      desc="Expense Tracking application which allows to add expenses, delete them and store them using local storage. It is also demonstrating the use of Redux for managing states."
      url="https://gunish-expense-tracker.netlify.app/"
      gitUrl="https://github.com/gunishjain/ExpenseTracker"
      badge="NEW"
    />
    <div class="divider my-0"></div>
    <HorizontalCardNew
    title="E-Commerce Product Display"
    img="/projects_img/shopkart.png"
    desc="Simple E-Commerce Product Display page, fetching data from API with state management and middleware implementation."
    url="https://shopkart-redux.netlify.app/"
    gitUrl="https://github.com/gunishjain/React-Redux-Ecommerce-Project-"

  />
  <div class="divider my-0"></div>
  <HorizontalCardNew
      title="Quiz WebApp"
      img="/projects_img/quiz.JPG"
      desc="Simple Quiz Application"
      url="https://shiny-fenglisu-10f9bf.netlify.app/"
      gitUrl="https://github.com/gunishjain/QuizApp-ReactJS"
    />
    <div class="divider my-0"></div>

  <HorizontalCardNew
      title="Breaking Bad Character Finder"
      img="/projects_img/bb.jpg"
      desc="Simple Web Application demonstrating API Data fetching"
      url="https://dapper-treacle-0595af.netlify.app/"
      gitUrl="https://github.com/gunishjain/BreakingBad-ReactApp"
    />
  <div class="divider my-0"></div>
    <HorizontalCard
      title="Todo List"
      img="/projects_img/todo-js.JPG"
      desc="Simple Todo List using Vanilla JS"
      url="https://github.com/gunishjain/TodoList-using-JS"
    />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Android Projects</div>
  </div>

  <HorizontalCard
    title="Social Media Application"
    img="/projects_img/socialMedia.png"
    desc="Social Media application which allows users to register account, Post pictures, Like,Edit Profile, View Feeds just like Instagram."
    url="https://github.com/gunishjain/SocialMedia"
  />

  <div class="divider my-0"></div>
  <HorizontalCard
    title="Zendora Wellness Application"
    img="/projects_img/zendora-new.png"
    desc="Wellness and Mindfulness Application which provides music based on mood and breathing exercises"
    url="https://github.com/gunishjain/Zendora"
  />
 
</BaseLayout>
